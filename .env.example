# ⚠️  IMPORTANT: .env FILE NOT NEEDED FOR STATIC DEMO MODE
# This .env.example file is for documentation only
# The static demo runs without any environment variables or database

# If you want to run the full-stack version with backend API:
# 1. Copy this file to .env
# 2. Update the values below with your actual credentials
# 3. Run: docker-compose up

# Database Configuration (only needed for full backend)
POSTGRES_DB=nagaratrack
POSTGRES_USER=nagaratrack
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://nagaratrack:your_secure_password_here@postgres:5432/nagaratrack

# Frontend Configuration
VITE_API_URL=http://localhost:8000

# Backend Configuration
BACKEND_URL=http://localhost:8000

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development
PRODUCTION=false

# Authentication
JWT_SECRET_KEY=dev_secret_key_please_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ADMIN_PASSWORD=admin123

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:3000

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
IMPORT_RATE_LIMIT_PER_MINUTE=10

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=csv,txt

# Cache Settings
REDIS_URL=redis://redis:6379/0
CACHE_TTL_SECONDS=300

# External Services
MAPS_API_KEY=your_maps_api_key_here
NOTIFICATION_SERVICE_URL=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Data Directory
DATA_DIR=./data

# Optional: Telegram Bot Configuration (leave empty to disable)
TELEGRAM_BOT_TOKEN=

# Optional: Traccar Configuration (currently disabled)
# TRACCAR_URL=http://traccar:8082